    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ContosoSuitesWebAPI",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build WebAPI", 
            "program": "${workspaceFolder}/src/ContosoSuitesWebAPI/bin/Debug/net8.0/ContosoSuitesWebAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/ContosoSuitesWebAPI",       
            "console": "internalConsole",
            "stopAtEntry": false    ,
            "envFile": "${workspaceFolder}/.env" 
        },
        {
            "name": "Launch streamlit",
            "type": "debugpy",
            "request": "launch",
            //"program": "streamlit",
            "module": "streamlit",
            "cwd": "${workspaceFolder}/src/ContosoSuitesDashboard",
            "args" : [
                "run",
                "Index.py"
            ]
        }
    ]
}